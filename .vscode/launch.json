    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", // or "lldb" or "cppvsdbg" (Windows)
            "preLaunchTask": "Build Debug",  // Reference to your Makefile build task
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerArgs": "-ex 'set pagination off'",  // Optional, to prevent `gdb` paging
        },
        {
            "name": "Debug Editor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/app",
            "args": ["editor"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", // or "lldb" or "cppvsdbg" (Windows)
            "preLaunchTask": "Build Debug",  // Reference to your Makefile build task
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerArgs": "-ex 'set pagination off'",  // Optional, to prevent `gdb` paging
        },
        {
            "name": "Debug Specific Scene",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/app",
            "args": [
                "${input:scenary-arg}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", // or "lldb" or "cppvsdbg" (Windows)
            "preLaunchTask": "Build Debug",  // Reference to your Makefile build task
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerArgs": "-ex 'set pagination off'",  // Optional, to prevent `gdb` paging
        },
        {
            "name": "Debug FBX",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/fbx_test",
            "args": ["editor"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", // or "lldb" or "cppvsdbg" (Windows)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerArgs": "-ex 'set pagination off'",  // Optional, to prevent `gdb` paging
        },
        {
            "name": "Debug Current File",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",  // Use the dynamically created executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",  // Use "gdb" for Linux/macOS or "lldb" for macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build active file",  // The task to compile the current file
            "miDebuggerPath": "/usr/bin/gdb",  // GDB path on Linux (change if necessary)
            "logging": {
                "engineLogging": false
            },
            "showDisplayString": true
        }
    ],
    "inputs": [
        {
            "id": "scenary-arg",
            "type": "promptString",
            "description": "Enter the scene to load"
        }
    ]
}